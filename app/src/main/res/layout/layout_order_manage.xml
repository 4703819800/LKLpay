<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dimen_10_dip"
    android:layout_marginRight="@dimen/dimen_10_dip"
    android:layout_marginTop="@dimen/dimen_1_dip"
    android:layout_marginBottom="@dimen/dimen_1_dip"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_18_dip"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/order_img"
            android:layout_width="@dimen/dimen_60_dip"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/order_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_10_dip"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_66"
            android:textSize="@dimen/dimen_16_sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/order_img"
            android:layout_toEndOf="@+id/order_img"
            android:layout_above="@+id/order_Text" />

        <TextView
            android:id="@+id/order_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimen_10_dip"
            android:paddingRight="@dimen/dimen_10_dip"
            android:textSize="@dimen/dimen_20_sp"
            android:textColor="@color/black"
            android:layout_below="@+id/order_img"
            android:layout_toRightOf="@+id/order_img"
            android:layout_toEndOf="@+id/order_img" />

        <TextView
            android:id="@+id/order_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dimen_10_dip"
            android:textSize="@dimen/dimen_8_sp"
            android:textColor="@color/color_68"
            android:layout_alignBaseline="@+id/order_Text"
            android:layout_alignBottom="@+id/order_Text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/order_Num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_10_sp"
            android:textColor="@color/color_68"
            android:paddingLeft="@dimen/dimen_10_dip"
            android:layout_below="@+id/order_Text"
            android:layout_toRightOf="@+id/order_img"
            android:layout_toEndOf="@+id/order_img" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
