<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_6b">

    <include
        android:id="@+id/include1"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll"
        android:layout_below="@+id/include1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_16_dip">

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="@dimen/dimen_55_dip"
                        android:layout_height="@dimen/dimen_55_dip" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10_dip"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimen_12_sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_img"
                    android:background="@color/black"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/dimen_20_dip"
                    android:text="ï¿¥0.00"
                    android:textColor="@color/white"
                    android:textSize="56sp" />

                <EditText
                    android:id="@+id/et1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:background="@color/black"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="false"
                    android:gravity="right"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="30sp" />


                <include
                    android:id="@+id/board"
                    layout="@layout/keyboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/et1" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/submit"
        style="@style/all_btn_style"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dimen_26_dip"
        android:layout_alignParentBottom="true"
        android:text="@string/submit_order" />
</RelativeLayout>
