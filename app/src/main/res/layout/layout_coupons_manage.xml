<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true">

    <yyydjk.com.library.CouponView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/couponView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_pinkl"
        android:orientation="vertical"
        android:padding="@dimen/dimen_36_dip"
        app:cv_is_semicircle_bottom="true"
        app:cv_is_semicircle_left="true"
        app:cv_is_semicircle_right="true"
        app:cv_is_semicircle_top="true"
        app:cv_semicircle_color="@android:color/white"
        app:cv_semicircle_gap="@dimen/dimen_8_dip"
        app:cv_semicircle_radius="@dimen/dimen_8_dip"
        app:cv_dash_line_color="@android:color/white"
        app:cv_dash_line_gap="@dimen/dimen_5_dip"
        app:cv_dash_line_height="@dimen/dimen_1_dip"
        app:cv_dash_line_length="@dimen/dimen_10_dip"
        app:cv_dash_line_margin_bottom="@dimen/dimen_15_dip"
        app:cv_dash_line_margin_left="@dimen/dimen_18_dip"
        app:cv_dash_line_margin_right="@dimen/dimen_18_dip"
        app:cv_dash_line_margin_top="@dimen/dimen_15_dip"
        app:cv_is_dash_line_bottom="true"
        app:cv_is_dash_line_left="true"
        app:cv_is_dash_line_right="true"
        app:cv_is_dash_line_top="true">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dimen_140_dip"
                android:layout_height="@dimen/dimen_140_dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_coupons" />

            <TextView
                android:id="@+id/coupons_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_26_sp"
                android:layout_toEndOf="@+id/img"
                android:layout_toRightOf="@+id/img"
                android:layout_marginLeft="@dimen/dimen_40_dip" />

            <TextView
                android:id="@+id/coupons_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/coupons_name"
                android:layout_alignStart="@+id/coupons_name"
                android:layout_below="@+id/coupons_name"
                android:textSize="@dimen/dimen_12_sp"
                android:textColor="@color/white"
                android:layout_toLeftOf="@+id/checkBox"
                android:layout_toStartOf="@+id/checkBox" />

            <TextView
                android:id="@+id/coupons_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_12_sp"
                android:textColor="@color/white"
                android:layout_below="@+id/coupons_text"
                android:layout_alignLeft="@+id/coupons_text"
                android:layout_alignStart="@+id/coupons_text" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />

        </RelativeLayout>
    </yyydjk.com.library.CouponView>
</android.support.v7.widget.CardView>
