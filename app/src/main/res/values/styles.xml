<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- loading_style -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 数字键盘样式 -->
    <style name="numeric_keyboard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_140_dip</item>
        <item name="android:textSize">@dimen/dimen_20_sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_margin">0.1dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/btn_jisuan_selector</item>
    </style>
    <!-- 首页按钮image样式 -->
    <style name="main_button_image">
        <item name="android:layout_width">@dimen/dimen_84_dip</item>
        <item name="android:layout_height">@dimen/dimen_84_dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/dimen_18_dip</item>
    </style>
    <!-- 首页按钮RelativeLayout样式 -->
    <style name="main_button_rl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_188_dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dimen_8_dip</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- 首页按钮text样式 -->
    <style name="main_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/dimen_16_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 计算器按钮样式 -->
    <style name="counter_button_up" parent="counter_pay_style">
        <item name="android:textSize">@dimen/dimen_16_sp</item>
    </style>

    <!-- 支付方式按钮样式 -->
    <style name="button_pay_style" parent="counter_pay_style">
        <item name="android:textSize">0dp</item>
    </style>

    <style name="counter_pay_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_margin">0.1dp</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">@dimen/dimen_16_dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/btn_counter_selector</item>
    </style>
    <!-- 会员中心按钮样式 -->
    <style name="vip_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dimen_188_dip</item>
        <item name="android:textSize">@dimen/dimen_20_sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dimen_5_dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--权限申请样式-->
    <style name="PermissionBlueStyle">
        <item name="PermissionTitleColor">@color/color_blue_b5</item>
        <item name="PermissionMsgColor">@color/color_blue_b5</item>
        <item name="PermissionItemTextColor">@color/color_blue_b5</item>
        <item name="PermissionButtonBackground">@drawable/shape_btn</item>
        <item name="PermissionBackround">@drawable/shape_bg_white</item>
        <item name="PermissionButtonTextColor">@android:color/white</item>
    </style>

    <!-- 新建优惠券 -->
    <style name="new_coupons_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/dimen_16_dip</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16_dip</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/dimen_16_dip</item>
    </style>

    <style name="new_coupons_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:minHeight">@dimen/dimen_60_dip</item>
        <item name="android:textSize">@dimen/dimen_18_sp</item>
    </style>

    <style name="new_coupons_TextView_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_6b</item>
        <item name="android:minHeight">@dimen/dimen_60_dip</item>
        <item name="android:textSize">@dimen/dimen_12_sp</item>
    </style>
    <!-- 优惠券按钮RelativeLayout样式 （新建、删除）-->
    <style name="coupons_btn_new_del_rl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_96_dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- 优惠券按钮image样式（新建、删除） -->
    <style name="coupons_btn_new_del_image">
        <item name="android:layout_width">@dimen/dimen_42_dip</item>
        <item name="android:layout_height">@dimen/dimen_42_dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/dimen_8_dip</item>
    </style>
    <!-- 所有通用btn样式 -->
    <style name="all_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimen_16_sp</item>
        <item name="android:textStyle">bold</item>
    </style>






    <!-- 未使用 -->
    <style name="tweetName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:shadowColor">#44000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="tweetText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColorLink">#888888</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="tweetDate">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFCCCCCC</item>
    </style>


</resources>
